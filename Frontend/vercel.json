{
  "version": 2,
  "name": "virtual-patient-simulator",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://virtualpatientsimulator-production.up.railway.app"
  },
  "build": {
    "env": {
      "REACT_APP_API_URL": "https://virtualpatientsimulator-production.up.railway.app"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
